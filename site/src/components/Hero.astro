<section class="hero" id="hero">
  <div class="hero__bg">
    <picture>
      <source srcset="/images/hero-bg.webp" type="image/webp" />
      <img src="/images/hero-bg.jpg" alt="" class="hero__bg-img" />
    </picture>
    <div class="hero__overlay"></div>
  </div>
  <div class="container hero__inner">
    <p class="section-label section-label--light">Vibroacoustic Therapy</p>
    <div class="hero__row">
      <h1 class="hero__title hero__highlight">
        Let go of your mind.<br />
        Let go of your body.<br />
        Find your self.
      </h1>
      <img src="/images/logo.svg" alt="Vibe'N Thrive logo" class="hero__logo" />
    </div>
    <p class="hero__subtitle">
      A fully immersive, therapeutic sound experience designed to promote accelerated entry into deep meditative states.
    </p>
    <div class="hero__actions">
      <a href="#booking" class="btn btn--primary">Book a Session</a>
      <a href="#what-is-vat" class="btn btn--outline hero__btn--outline">Learn About VAT</a>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100dvh;
    display: flex;
    align-items: center;
    padding: 8rem 1.5rem 6rem;
    position: relative;
    overflow: hidden;
  }

  .hero__bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero__bg-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  .hero__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0.3) 0%,
      rgba(0, 0, 0, 0.15) 40%,
      rgba(0, 0, 0, 0.4) 100%
    );
    backdrop-filter: blur(1px);
  }

  .hero__inner {
    max-width: 960px;
    position: relative;
    z-index: 1;
  }

  .hero__row {
    display: flex;
    align-items: center;
    gap: clamp(2rem, 5vw, 4rem);
    margin-bottom: 1.5rem;
  }

  .hero__logo {
    width: clamp(160px, 22vw, 280px);
    height: auto;
    flex-shrink: 0;
    filter: brightness(1.8) saturate(1.4) drop-shadow(0 0 30px rgba(100, 200, 255, 0.5)) drop-shadow(0 0 60px rgba(100, 200, 255, 0.25));
  }

  .hero__title {
    font-size: clamp(2.75rem, 6vw, 4.5rem);
    font-weight: 900;
    line-height: 1.08;
    margin-bottom: 0;
    letter-spacing: -0.03em;
    flex: 1;
    min-width: 0;
  }

  .hero__highlight {
    background: linear-gradient(135deg, #a0e8ff, #ffffff 50%, #7dd3c8);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: none;
  }

  .section-label--light {
    color: rgba(255, 255, 255, 0.8);
  }

  .hero__subtitle {
    font-size: clamp(1.0625rem, 1.5vw, 1.25rem);
    color: rgba(255, 255, 255, 0.85);
    line-height: 1.7;
    margin-bottom: 2.5rem;
    max-width: 52ch;
  }

  .hero__actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .hero__btn--outline {
    color: #fff;
    border-color: rgba(255, 255, 255, 0.5);
  }

  .hero__btn--outline:hover {
    border-color: #fff;
    background: rgba(255, 255, 255, 0.1);
  }

  @media (max-width: 768px) {
    .hero__row {
      flex-direction: column-reverse;
      text-align: center;
      gap: 1.5rem;
    }

    .hero__logo {
      width: clamp(120px, 35vw, 180px);
    }

    .hero__subtitle {
      margin-left: auto;
      margin-right: auto;
    }

    .hero__actions {
      justify-content: center;
    }
  }

  @media (max-width: 600px) {
    .hero {
      padding: 7rem 1rem 4rem;
    }

    .hero__actions {
      flex-direction: column;
    }

    .hero__actions .btn {
      text-align: center;
      justify-content: center;
    }
  }
</style>
