<section class="hero" id="hero">
  <div class="container hero__inner">
    <p class="section-label">Vibroacoustic Therapy</p>
    <div class="hero__row">
      <h1 class="hero__title hero__highlight">
        Let go of your mind.<br />
        Let go of your body.<br />
        Find your self.
      </h1>
      <img src="/images/logo.svg" alt="Vibe'N Thrive logo" class="hero__logo" />
    </div>
    <p class="hero__subtitle">
      A fully immersive, therapeutic sound experience designed to promote accelerated entry into deep meditative states.
    </p>
    <div class="hero__actions">
      <a href="#booking" class="btn btn--primary">Book a Session</a>
      <a href="#what-is-vat" class="btn btn--outline">Learn About VAT</a>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100dvh;
    display: flex;
    align-items: center;
    padding: 8rem 1.5rem 6rem;
  }

  .hero__inner {
    max-width: 960px;
  }

  .hero__row {
    display: flex;
    align-items: center;
    gap: clamp(2rem, 5vw, 4rem);
    margin-bottom: 1.5rem;
  }

  .hero__logo {
    width: clamp(160px, 22vw, 280px);
    height: auto;
    flex-shrink: 0;
    filter: drop-shadow(0 4px 20px rgba(71, 100, 148, 0.18));
  }

  .hero__title {
    font-size: clamp(2.75rem, 6vw, 4.5rem);
    font-weight: 900;
    line-height: 1.08;
    margin-bottom: 0;
    letter-spacing: -0.03em;
    flex: 1;
    min-width: 0;
  }

  .hero__highlight {
    background: linear-gradient(135deg, var(--color-blue), var(--color-teal));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero__subtitle {
    font-size: clamp(1.0625rem, 1.5vw, 1.25rem);
    color: var(--color-gray-600);
    line-height: 1.7;
    margin-bottom: 2.5rem;
    max-width: 52ch;
  }

  .hero__actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .hero__row {
      flex-direction: column-reverse;
      text-align: center;
      gap: 1.5rem;
    }

    .hero__logo {
      width: clamp(120px, 35vw, 180px);
    }

    .hero__subtitle {
      margin-left: auto;
      margin-right: auto;
    }

    .hero__actions {
      justify-content: center;
    }
  }

  @media (max-width: 600px) {
    .hero {
      padding: 7rem 1rem 4rem;
    }

    .hero__actions {
      flex-direction: column;
    }

    .hero__actions .btn {
      text-align: center;
      justify-content: center;
    }
  }
</style>
