---
const links = [
  { label: 'Services', href: '#services' },
  { label: 'Pricing', href: '#pricing' },
  { label: 'Reviews', href: '#reviews' },
  { label: 'About', href: '#about' },
  { label: 'Blog', href: '#blog' },
  { label: 'What is VAT?', href: '#what-is-vat' },
];
---

<nav class="nav" id="nav">
  <div class="nav__inner">
    <a href="#" class="nav__logo">
      <img src="/images/logo.png" alt="Vibe'N Thrive logo" class="nav__logo-icon" />
      <div class="nav__logo-text-wrap">
        <span class="nav__logo-text">Vibe'N Thrive</span>
        <span class="nav__logo-sub">Vibro-Acoustic Therapy</span>
      </div>
    </a>

    <button class="nav__toggle" aria-label="Toggle menu" aria-expanded="false">
      <span class="nav__toggle-bar"></span>
      <span class="nav__toggle-bar"></span>
      <span class="nav__toggle-bar"></span>
    </button>

    <ul class="nav__links" role="list">
      {links.map(link => (
        <li><a href={link.href}>{link.label}</a></li>
      ))}
      <li class="nav__cta-item">
        <a href="#booking" class="btn btn--primary btn--small">Book a Session</a>
      </li>
    </ul>
  </div>
</nav>

<style>
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    padding: 0.75rem 1.5rem;
    transition: all 0.4s var(--ease-out);
  }

  .nav.scrolled {
    background: rgba(255, 255, 255, 0.75);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.5);
    box-shadow: 0 1px 20px rgba(0, 0, 0, 0.05);
  }

  .nav__inner {
    max-width: var(--content-max);
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .nav__logo {
    text-decoration: none;
    color: var(--color-gray-900);
    display: flex;
    align-items: center;
    gap: 0.625rem;
  }

  .nav__logo-icon {
    width: 40px;
    height: 40px;
    object-fit: contain;
  }

  .nav__logo-text-wrap {
    display: flex;
    flex-direction: column;
  }

  .nav__logo-text {
    display: block;
    font-family: var(--font-display);
    font-size: 1.375rem;
    font-weight: 300;
    letter-spacing: 0.18em;
    text-transform: uppercase;
  }

  .nav__logo-sub {
    display: block;
    font-family: var(--font-display);
    font-size: 0.625rem;
    font-weight: 300;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-gray-400);
    margin-top: -2px;
  }

  .nav__amp {
    color: var(--color-teal);
  }

  .nav__toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .nav__toggle-bar {
    display: block;
    width: 24px;
    height: 2px;
    background: var(--color-gray-800);
    border-radius: 2px;
    transition: all 0.3s var(--ease-out);
  }

  .nav__links {
    display: flex;
    align-items: center;
    gap: 2rem;
    list-style: none;
  }

  .nav__links a {
    color: var(--color-gray-600);
    font-size: 0.9375rem;
    font-weight: 500;
    text-decoration: none;
    transition: color var(--transition-base);
  }

  .nav__links a:hover {
    color: var(--color-gray-900);
  }

  .nav__cta-item a {
    color: var(--color-white);
  }

  .nav__cta-item a:hover {
    color: var(--color-white);
  }

  @media (max-width: 900px) {
    .nav__toggle {
      display: flex;
    }

    .nav__links {
      position: fixed;
      top: 0;
      right: -100%;
      width: min(320px, 85vw);
      height: 100dvh;
      flex-direction: column;
      gap: 0;
      padding: 5rem 2rem 2rem;
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(30px);
      -webkit-backdrop-filter: blur(30px);
      transition: right 0.4s var(--ease-out);
      box-shadow: -10px 0 40px rgba(0, 0, 0, 0.1);
    }

    .nav__links.open {
      right: 0;
    }

    .nav__links li {
      width: 100%;
    }

    .nav__links a {
      display: block;
      padding: 1rem 0;
      font-size: 1.125rem;
      border-bottom: 1px solid var(--color-gray-100);
    }

    .nav__cta-item {
      margin-top: 1rem;
    }

    .nav__cta-item a {
      text-align: center;
    }
  }
</style>

<script>
  const nav = document.getElementById('nav');
  const toggle = document.querySelector('.nav__toggle');
  const links = document.querySelector('.nav__links');

  // Scroll effect
  function handleScroll() {
    if (window.scrollY > 50) {
      nav?.classList.add('scrolled');
    } else {
      nav?.classList.remove('scrolled');
    }
  }
  window.addEventListener('scroll', handleScroll, { passive: true });
  handleScroll();

  // Mobile menu
  toggle?.addEventListener('click', () => {
    const expanded = toggle.getAttribute('aria-expanded') === 'true';
    toggle.setAttribute('aria-expanded', String(!expanded));
    links?.classList.toggle('open');
  });

  // Close menu on link click
  links?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      links.classList.remove('open');
      toggle?.setAttribute('aria-expanded', 'false');
    });
  });
</script>
