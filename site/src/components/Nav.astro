---
const links = [
  { label: 'Services', href: '#services' },
  { label: 'Pricing', href: '#pricing' },
  { label: 'Reviews', href: '#reviews' },
  { label: 'About', href: '#about' },
  { label: 'Blog', href: '#blog' },
  { label: 'What is VAT?', href: '#what-is-vat' },
];
---

<nav class="nav" id="nav">
  <div class="nav__inner">
    <a href="#" class="nav__logo">
      <img src="/images/logo.png" alt="Vibe'N Thrive logo" class="nav__logo-icon" />
      <div class="nav__logo-text-wrap">
        <span class="nav__logo-text">Vibe'N Thrive</span>
        <span class="nav__logo-sub">Vibro-Acoustic Therapy</span>
      </div>
    </a>

    <button class="nav__toggle" aria-label="Toggle menu" aria-expanded="false">
      <span class="nav__toggle-bar"></span>
      <span class="nav__toggle-bar"></span>
      <span class="nav__toggle-bar"></span>
    </button>

    <ul class="nav__links" role="list">
      {links.map(link => (
        <li><a href={link.href}>{link.label}</a></li>
      ))}
      <li class="nav__cta-item">
        <a href="#booking" class="btn btn--primary btn--small">Book a Session</a>
      </li>
    </ul>
  </div>
</nav>

<style>
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    padding: 0.75rem 1.5rem;
    transition: all 0.4s var(--ease-out);
    background: white;
    border: none;
    box-shadow: none;
    mask-image: linear-gradient(to bottom, transparent 0%, black 14%, black 86%, transparent 100%);
    -webkit-mask-image: linear-gradient(to bottom, transparent 0%, black 14%, black 86%, transparent 100%);
  }

  .nav.scrolled {
    mask-image: linear-gradient(to bottom, black 0%, black 86%, transparent 100%);
    -webkit-mask-image: linear-gradient(to bottom, black 0%, black 86%, transparent 100%);
  }

  .nav.scrolled {
    box-shadow: 0 1px 20px rgba(0, 0, 0, 0.05);
  }

  .nav__inner {
    max-width: var(--content-max);
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .nav__logo {
    text-decoration: none;
    color: var(--color-gray-900);
    display: flex;
    align-items: center;
    gap: 0.625rem;
  }

  .nav__logo-icon {
    width: 40px;
    height: 40px;
    object-fit: contain;
  }

  .nav__logo-text-wrap {
    display: flex;
    flex-direction: column;
    align-items: stretch;
    text-align: justify;
    text-align-last: justify;
  }

  .nav__logo-text {
    display: block;
    font-family: var(--font-display);
    font-size: 1.375rem;
    font-weight: 300;
    letter-spacing: 0.18em;
    text-transform: uppercase;
  }

  .nav__logo-sub {
    display: block;
    font-family: var(--font-display);
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-gray-400);
    margin-top: -2px;
  }

  .nav__amp {
    color: var(--color-teal);
  }

  .nav__toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    z-index: 1001;
    position: relative;
  }

  .nav__toggle-bar {
    display: block;
    width: 24px;
    height: 2px;
    background: var(--color-gray-800);
    border-radius: 2px;
    transition: all 0.3s var(--ease-out);
  }

  .nav__links {
    display: flex;
    align-items: center;
    gap: 2rem;
    list-style: none;
  }

  .nav__links a {
    color: var(--color-gray-600);
    font-size: 0.9375rem;
    font-weight: 500;
    text-decoration: none;
    transition: color var(--transition-base);
  }

  .nav__links a:hover {
    color: var(--color-gray-900);
  }

  .nav__cta-item a {
    color: var(--color-white);
  }

  .nav__cta-item a:hover {
    color: var(--color-white);
  }

  @media (max-width: 900px) {
    .nav__toggle {
      display: flex;
    }

    .nav__links {
      position: fixed;
      top: 0;
      right: -100%;
      width: min(320px, 85vw);
      height: 100dvh;
      flex-direction: column;
      gap: 0;
      padding: 5rem 2rem 2rem;
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(30px);
      -webkit-backdrop-filter: blur(30px);
      transition: right 0.4s var(--ease-out);
      box-shadow: -10px 0 40px rgba(0, 0, 0, 0.1);
    }

    .nav__links.open {
      right: 0;
    }

    /* Hamburger to X animation */
    .nav__toggle[aria-expanded="true"] .nav__toggle-bar:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
    }

    .nav__toggle[aria-expanded="true"] .nav__toggle-bar:nth-child(2) {
      opacity: 0;
    }

    .nav__toggle[aria-expanded="true"] .nav__toggle-bar:nth-child(3) {
      transform: rotate(-45deg) translate(5px, -5px);
    }

    .nav__links li {
      width: 100%;
    }

    .nav__links a {
      display: block;
      padding: 1rem 0;
      font-size: 1.125rem;
      border-bottom: 1px solid var(--color-gray-100);
    }

    .nav__cta-item {
      margin-top: 1rem;
    }

    .nav__cta-item a {
      text-align: center;
    }
  }
</style>

<script>
  const nav = document.getElementById('nav');
  const toggle = document.querySelector('.nav__toggle');
  const linksContainer = document.querySelector('.nav__links');

  // Scroll effect
  function handleScroll() {
    if (window.scrollY > 50) {
      nav?.classList.add('scrolled');
    } else {
      nav?.classList.remove('scrolled');
    }
  }
  window.addEventListener('scroll', handleScroll, { passive: true });
  handleScroll();

  // Mobile menu toggle
  toggle?.addEventListener('click', (e) => {
    e.stopPropagation();
    const expanded = toggle.getAttribute('aria-expanded') === 'true';
    toggle.setAttribute('aria-expanded', String(!expanded));
    linksContainer?.classList.toggle('open');

    // Prevent body scroll when menu is open
    if (!expanded) {
      document.body.style.overflow = 'hidden';
    } else {
      document.body.style.overflow = '';
    }
  });

  // Handle link clicks with smooth scroll
  linksContainer?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', (e) => {
      const href = link.getAttribute('href');

      // Only handle anchor links
      if (href?.startsWith('#')) {
        e.preventDefault();

        const targetId = href.slice(1);
        const targetElement = targetId ? document.getElementById(targetId) : null;

        // Close mobile menu
        linksContainer.classList.remove('open');
        toggle?.setAttribute('aria-expanded', 'false');
        document.body.style.overflow = '';

        // Smooth scroll to target after a brief delay for menu animation
        if (targetElement) {
          setTimeout(() => {
            targetElement.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }, 100);
        } else if (href === '#') {
          // Scroll to top for logo/home link
          setTimeout(() => {
            window.scrollTo({
              top: 0,
              behavior: 'smooth'
            });
          }, 100);
        }
      }
    });
  });

  // Close menu when clicking outside
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    if (linksContainer?.classList.contains('open') &&
        !linksContainer.contains(target) &&
        !toggle?.contains(target)) {
      linksContainer.classList.remove('open');
      toggle?.setAttribute('aria-expanded', 'false');
      document.body.style.overflow = '';
    }
  });

  // Close menu on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && linksContainer?.classList.contains('open')) {
      linksContainer.classList.remove('open');
      toggle?.setAttribute('aria-expanded', 'false');
      document.body.style.overflow = '';
    }
  });

  // Logo smooth scroll to top
  const logo = document.querySelector('.nav__logo');
  logo?.addEventListener('click', (e) => {
    e.preventDefault();
    window.scrollTo({
      top: 0,
      behavior: 'smooth'
    });
  });
</script>
