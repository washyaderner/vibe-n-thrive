<style>
  .booking__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    align-items: stretch;
  }

  .booking__left {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .booking__map {
    padding: 1.25rem;
  }

  .booking__map-link {
    display: block;
    border-radius: 16px;
    overflow: hidden;
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .booking__map-link:hover {
    transform: scale(1.01);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .booking__map iframe {
    width: 100%;
    height: 380px;
    border-radius: 16px;
    display: block;
  }

  .booking__map-placeholder {
    width: 100%;
    height: 380px;
    border-radius: 16px;
    background: linear-gradient(135deg, #e0f7f5 0%, #bae6e0 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    color: var(--color-teal);
    font-size: 0.875rem;
    font-weight: 500;
  }

  .booking__map-placeholder.loaded {
    display: none;
  }

  .booking__address {
    padding: 1rem 1rem 0.5rem;
    font-size: 0.9375rem;
    color: var(--color-gray-600);
    line-height: 1.6;
  }

  .booking__address strong {
    color: var(--color-gray-900);
    font-size: 1rem;
  }

  .booking__address-line {
    white-space: nowrap;
  }

  .booking__contact {
    padding: 1.5rem;
  }

  .booking__contact-name {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-gray-900);
  }

  .booking__contact-info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .booking__contact-message {
    font-size: 0.8125rem;
    color: var(--color-gray-700);
    line-height: 1.6;
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--color-gray-100);
  }

  .booking__phone a {
    color: var(--color-gray-900);
    font-weight: 500;
    font-size: 1rem;
    text-decoration: none;
  }

  .booking__phone a:hover {
    text-decoration: underline;
  }

  .booking__email {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .booking__email-btn {
    background: none;
    border: none;
    padding: 0;
    color: var(--color-gray-900);
    font-weight: 500;
    font-size: 1rem;
    cursor: pointer;
    text-decoration: none;
    font-family: inherit;
  }

  .booking__email-btn:hover {
    text-decoration: underline;
  }

  .booking__email-copied {
    font-size: 0.75rem;
    color: var(--color-teal);
    font-weight: 600;
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .booking__email-copied.show {
    opacity: 1;
  }

  .booking__calendar {
    padding: 2rem;
    display: flex;
    flex-direction: column;
  }

  .booking__calendar-title {
    margin-bottom: 0.5rem;
  }

  .booking__calendar-desc {
    font-size: 0.9375rem;
    color: var(--color-gray-600);
    margin-bottom: 1.5rem;
  }

  .booking__calendly-wrap {
    border-radius: 16px;
    overflow: hidden;
    flex: 1;
  }

  .booking__calendly-wrap iframe {
    height: 100% !important;
    min-height: 100% !important;
  }

  @media (max-width: 900px) {
    .booking__grid {
      grid-template-columns: 1fr;
    }

    .booking__address-line {
      white-space: normal;
    }
  }
</style>

<script>
  // Lazy-load Google Maps
  const mapContainer = document.querySelector('.booking__map');
  const mapIframe = mapContainer?.querySelector('iframe[data-src]');
  const mapPlaceholder = mapContainer?.querySelector('.booking__map-placeholder');

  if (mapIframe && mapContainer) {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          mapIframe.src = mapIframe.dataset.src;
          mapIframe.addEventListener('load', () => {
            mapPlaceholder?.classList.add('loaded');
          }, { once: true });
          observer.disconnect();
        }
      });
    }, { rootMargin: '200px' });

    observer.observe(mapContainer);
  }

  // Calendly lazy-load inline embed
  const calendlyContainer = document.getElementById('calendly-inline');

  if (calendlyContainer) {
    const calObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          // Load Calendly CSS
          const link = document.createElement('link');
          link.rel = 'stylesheet';
          link.href = 'https://assets.calendly.com/assets/external/widget.css';
          document.head.appendChild(link);

          // Load Calendly JS and init inline widget
          const script = document.createElement('script');
          script.src = 'https://assets.calendly.com/assets/external/widget.js';
          script.onload = () => {
            window.Calendly.initInlineWidget({
              url: 'https://calendly.com/vibenthrivevibroacoustics/60-min-session?hide_event_type_details=1&hide_gdpr_banner=1',
              parentElement: calendlyContainer,
            });
          };
          document.head.appendChild(script);

          calObserver.disconnect();
        }
      });
    }, { rootMargin: '800px' });

    calObserver.observe(calendlyContainer);
  }

  const emailBtn = document.querySelector('.booking__email-btn');
  const copiedMsg = document.querySelector('.booking__email-copied');

  emailBtn?.addEventListener('click', async () => {
    const email = emailBtn.getAttribute('data-email');
    if (!email) return;

    try {
      await navigator.clipboard.writeText(email);
      copiedMsg?.classList.add('show');
      setTimeout(() => {
        copiedMsg?.classList.remove('show');
      }, 2000);
    } catch (err) {
      // Fallback for older browsers
      const textArea = document.createElement('textarea');
      textArea.value = email;
      textArea.style.position = 'fixed';
      textArea.style.opacity = '0';
      document.body.appendChild(textArea);
      textArea.select();
      document.execCommand('copy');
      document.body.removeChild(textArea);
      copiedMsg?.classList.add('show');
      setTimeout(() => {
        copiedMsg?.classList.remove('show');
      }, 2000);
    }
  });
</script>
