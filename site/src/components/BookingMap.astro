<section class="booking section" id="booking">
  <div class="container">
    <div class="text-center">
      <p class="section-label">Visit Us</p>
      <h2 class="section-title">Location & Booking</h2>
      <p class="section-subtitle" style="margin-left:auto;margin-right:auto;">
        We're located in Tigard, Oregon. Book your session online â€” it only takes a minute.
      </p>
    </div>

    <div class="booking__grid">
      <div class="booking__left">
        <div class="booking__map glass">
          <a
            href="https://maps.google.com/?q=10580+SW+McDonald+St+Suite+205+Tigard+OR+97224"
            target="_blank"
            rel="noopener noreferrer"
            class="booking__map-link"
            aria-label="Open in Google Maps"
          >
            <iframe
              src="https://www.google.com/maps?q=10580+SW+McDonald+St,+Tigard,+OR+97224&output=embed&z=17"
              width="100%"
              height="100%"
              style="border:0; border-radius: 16px; pointer-events: none;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="Vibe & Thrive Therapy Location"
            ></iframe>
          </a>
          <div class="booking__address">
            <p><strong>Vibe & Thrive Therapy</strong></p>
            <p class="booking__address-line">10580 SW McDonald St, Suite 205, Tigard, OR 97224</p>
          </div>
        </div>

        <div class="booking__contact glass">
          <p class="booking__contact-name">Carson Goff</p>
          <div class="booking__contact-info">
            <p class="booking__phone">
              <a href="tel:+12083530597">(208) 353-0597</a>
            </p>
            <p class="booking__email">
              <button type="button" class="booking__email-btn" data-email="vibenthrivevibroacoustics@gmail.com">
                vibenthrivevibroacoustics@gmail.com
              </button>
              <span class="booking__email-copied">Copied!</span>
            </p>
          </div>
          <p class="booking__contact-message">
            If you have any questions or need specific accommodations, please feel free to reach out. Response times are typically shorter than 24hrs.
          </p>
        </div>
      </div>

      <div class="booking__calendar glass">
        <h3 class="booking__calendar-title">Book Your Session</h3>
        <p class="booking__calendar-desc">
          Select a time that works for you. Your first session includes a brief consultation.
        </p>
        <div class="booking__calendly-wrap">
          <!-- Calendly inline widget -->
          <div class="calendly-inline-widget" data-url="https://calendly.com/vibenthrivevibroacoustics/60-min-session?hide_event_type_details=1&hide_gdpr_banner=1" style="min-width:320px;height:580px;"></div>
          <script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .booking__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    align-items: start;
  }

  .booking__left {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .booking__map {
    padding: 1.25rem;
  }

  .booking__map-link {
    display: block;
    border-radius: 16px;
    overflow: hidden;
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .booking__map-link:hover {
    transform: scale(1.01);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .booking__map iframe {
    width: 100%;
    height: 380px;
    border-radius: 16px;
    display: block;
  }

  .booking__address {
    padding: 1rem 1rem 0.5rem;
    font-size: 0.9375rem;
    color: var(--color-gray-600);
    line-height: 1.6;
  }

  .booking__address strong {
    color: var(--color-gray-900);
    font-size: 1rem;
  }

  .booking__address-line {
    white-space: nowrap;
  }

  .booking__contact {
    padding: 1.5rem;
  }

  .booking__contact-name {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-gray-900);
    margin-bottom: 0.75rem;
  }

  .booking__contact-info {
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
    margin-bottom: 1rem;
  }

  .booking__contact-message {
    font-size: 0.8125rem;
    color: var(--color-gray-500);
    line-height: 1.6;
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--color-gray-100);
  }

  .booking__phone a {
    color: var(--color-teal);
    font-weight: 600;
    font-size: 1.0625rem;
    text-decoration: none;
  }

  .booking__phone a:hover {
    text-decoration: underline;
  }

  .booking__email {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .booking__email-btn {
    background: none;
    border: none;
    padding: 0;
    color: var(--color-teal);
    font-weight: 500;
    font-size: 0.9375rem;
    cursor: pointer;
    text-decoration: none;
    font-family: inherit;
  }

  .booking__email-btn:hover {
    text-decoration: underline;
  }

  .booking__email-copied {
    font-size: 0.75rem;
    color: var(--color-teal);
    font-weight: 600;
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .booking__email-copied.show {
    opacity: 1;
  }

  .booking__calendar {
    padding: 2rem;
  }

  .booking__calendar-title {
    margin-bottom: 0.5rem;
  }

  .booking__calendar-desc {
    font-size: 0.9375rem;
    color: var(--color-gray-600);
    margin-bottom: 1.5rem;
  }

  .booking__calendly-wrap {
    border-radius: 16px;
    overflow: hidden;
  }

  @media (max-width: 900px) {
    .booking__grid {
      grid-template-columns: 1fr;
    }

    .booking__address-line {
      white-space: normal;
    }
  }
</style>

<script>
  const emailBtn = document.querySelector('.booking__email-btn');
  const copiedMsg = document.querySelector('.booking__email-copied');

  emailBtn?.addEventListener('click', async () => {
    const email = emailBtn.getAttribute('data-email');
    if (!email) return;

    try {
      await navigator.clipboard.writeText(email);
      copiedMsg?.classList.add('show');
      setTimeout(() => {
        copiedMsg?.classList.remove('show');
      }, 2000);
    } catch (err) {
      // Fallback for older browsers
      const textArea = document.createElement('textarea');
      textArea.value = email;
      textArea.style.position = 'fixed';
      textArea.style.opacity = '0';
      document.body.appendChild(textArea);
      textArea.select();
      document.execCommand('copy');
      document.body.removeChild(textArea);
      copiedMsg?.classList.add('show');
      setTimeout(() => {
        copiedMsg?.classList.remove('show');
      }, 2000);
    }
  });
</script>
